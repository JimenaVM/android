<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_weight="0.16">

        <FrameLayout
            android:layout_width="157dp"
            android:layout_height="185dp"
            android:layout_gravity="left|top"
            android:layout_marginLeft="20dp">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_gravity="left|top"
                android:src="@drawable/bag"
                android:layout_column="1"
                android:layout_span="13"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:id="@+id/imgProd"
                android:layout_gravity="center_horizontal|bottom"
                android:src="@drawable/p" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="164dp"
            android:layout_height="184dp"
            android:layout_gravity="right|top">

            <ImageView
                android:layout_width="154dp"
                android:layout_height="115dp"
                android:id="@+id/imageView5"
                android:layout_gravity="right|top"
                android:src="@drawable/equ"
                android:layout_column="30" />

            <ImageView
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:id="@+id/imgEqu"
                android:layout_gravity="center_horizontal|bottom"
                android:src="@drawable/e" />

        </FrameLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <FrameLayout
            android:layout_width="173dp"
            android:layout_height="181dp"
            android:layout_marginLeft="20dp">

            <ImageView
                android:layout_width="78dp"
                android:layout_height="95dp"
                android:id="@+id/imageView7"
                android:layout_gravity="center_horizontal|top"
                android:src="@drawable/acti"
                android:layout_column="1" />

            <ImageView
                android:layout_width="126dp"
                android:layout_height="98dp"
                android:id="@+id/imgAct"
                android:layout_gravity="center_horizontal|bottom"
                android:src="@drawable/a" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="166dp"
            android:layout_height="168dp"
            android:layout_gravity="right"
            android:layout_weight="1.56"
            android:layout_marginLeft="20dp">

            <ImageView
                android:layout_width="86dp"
                android:layout_height="79dp"
                android:id="@+id/imageView8"
                android:layout_gravity="center_horizontal|top"
                android:src="@drawable/datos"
                android:layout_column="30" />

            <ImageView
                android:layout_width="121dp"
                android:layout_height="73dp"
                android:id="@+id/imgDat"
                android:layout_gravity="center_horizontal|bottom"
                android:src="@drawable/d"
               />

        </FrameLayout>
    </FrameLayout>

</LinearLayout>